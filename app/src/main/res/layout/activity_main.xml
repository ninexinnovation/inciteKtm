<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ninexinnovation.incitektm.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Overpricing"
        android:id="@+id/btnOverPricing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Travel Fares"
        android:id="@+id/btnTravelFares"
        android:layout_below="@+id/btnOverPricing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnOverPricing"
        android:layout_alignEnd="@+id/btnOverPricing" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Crime Rate"
        android:id="@+id/btnCrimeRate"
        android:layout_below="@+id/btnTravelFares"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnTravelFares"
        android:layout_alignEnd="@+id/btnTravelFares" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Food Prices"
        android:id="@+id/btnFoodPrices"
        android:layout_below="@+id/btnCrimeRate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnCrimeRate"
        android:layout_alignEnd="@+id/btnCrimeRate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="News / Articles"
        android:id="@+id/btnNews"
        android:layout_below="@+id/btnFoodPrices"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnFoodPrices"
        android:layout_alignEnd="@+id/btnFoodPrices" />

</RelativeLayout>
